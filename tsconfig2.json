{
  "compilerOptions": {
    "downlevelIteration": true,
    "baseUrl": ".",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist/**/*"
  ]
}
